<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Control.MainController">
    <children>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#openMIBClicked" text="Open MIB" />
                        <MenuItem mnemonicParsing="false" onAction="#importMIBClicked" text="Import MIB" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit" />
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About us" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="588.0" prefWidth="885.0">
            <children>
                <ScrollPane fx:id="MIBsLoadedScrollPane" prefHeight="175.0" prefWidth="320.0">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                    <content>
                        <FlowPane prefHeight="165.0" prefWidth="306.0">
                            <children>
                                <Label prefHeight="41.0" prefWidth="309.0" text="Loaded MIBs">
                                    <font>
                                        <Font name="System Bold" size="15.0" />
                                    </font>
                                    <FlowPane.margin>
                                        <Insets left="5.0" />
                                    </FlowPane.margin>
                                </Label>
                        <TabPane prefHeight="124.0" prefWidth="310.0" tabClosingPolicy="UNAVAILABLE">
                          <tabs>
                            <Tab text="Standard">
                                 <content>
                                    <FlowPane fx:id="MIBsloaded" prefHeight="200.0" prefWidth="200.0" />
                                 </content>
                              </Tab>
                            <Tab text="Vendors" />
                          </tabs>
                        </TabPane>
                            </children>
                        </FlowPane>
                    </content>
                </ScrollPane>
            <AnchorPane fx:id="MIBTreeDisplay" layoutX="-1.0" layoutY="135.0" prefHeight="454.0" prefWidth="320.0" />
                <AnchorPane layoutX="320.0" prefHeight="41.0" prefWidth="567.0">
                    <children>
                        <Label alignment="CENTER" layoutY="4.0" prefHeight="41.0" prefWidth="79.0" text="Host IP">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <TextField fx:id="tfTargetIP" cache="true" layoutX="79.0" layoutY="13.0" prefHeight="24.0" prefWidth="146.0" promptText="Default is Localhost" />
                  <Label layoutX="236.0" layoutY="15.0" text="Comunity String">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="tfCommunityString" cache="true" layoutX="375.0" layoutY="12.0" promptText="Default is 'public'" />
                    </children>
                </AnchorPane>
                <AnchorPane layoutX="320.0" layoutY="51.0" prefHeight="84.0" prefWidth="567.0">
                    <children>
                        <Label alignment="CENTER" layoutY="-3.0" prefHeight="41.0" prefWidth="79.0" text="OID">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <TextField fx:id="tfOID" layoutX="79.0" layoutY="6.0" prefHeight="24.0" prefWidth="468.0">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </TextField>
                  <Button layoutX="79.0" layoutY="44.0" mnemonicParsing="false" onMouseClicked="#SNMPGetClicked" text="GET" />
                  <Button layoutX="305.0" layoutY="44.0" mnemonicParsing="false" onMouseClicked="#SNMPWalkClicked" text="WALK" />
                  <Button layoutX="180.0" layoutY="44.0" mnemonicParsing="false" text="GET NEXT" />
                    </children>
                </AnchorPane>
                <ScrollPane layoutX="320.0" layoutY="134.0" prefHeight="289.0" prefWidth="567.0">
               <content>
                  <AnchorPane prefHeight="287.0" prefWidth="565.0">
                     <children>
                        <TableView fx:id="queryTable" prefHeight="287.0" prefWidth="540.0">
                           <columns>
                              <TableColumn fx:id="nameColumn" prefWidth="124.0" text="Name" />
                              <TableColumn fx:id="typeColumn" prefWidth="149.0" text="Type" />
                              <TableColumn fx:id="valueColumn" prefWidth="266.0" text="Value" />
                           </columns>
                        </TableView>
                        <FlowPane layoutX="540.0" layoutY="-3.0" prefHeight="289.0" prefWidth="25.0">
                           <children>
                              <Label alignment="CENTER" contentDisplay="CENTER" onMouseClicked="#clearTableClicked" prefHeight="45.0" prefWidth="25.0" text="X" textFill="#e80606">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                                 <FlowPane.margin>
                                    <Insets top="30.0" />
                                 </FlowPane.margin>
                              </Label>
                           </children>
                        </FlowPane>
                     </children>
                  </AnchorPane>
               </content>
                </ScrollPane>
            <ScrollPane layoutX="320.0" layoutY="422.0" prefHeight="168.0" prefWidth="567.0">
               <content>
                  <GridPane gridLinesVisible="true" prefHeight="166.0" prefWidth="565.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="275.0" minWidth="10.0" prefWidth="118.0" />
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="452.0" minWidth="10.0" prefWidth="446.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints maxHeight="37.0" minHeight="10.0" prefHeight="22.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="46.0" minHeight="10.0" prefHeight="27.0" vgrow="SOMETIMES" />
                      <RowConstraints maxHeight="59.0" minHeight="10.0" prefHeight="27.0" vgrow="SOMETIMES" />
                      <RowConstraints maxHeight="60.0" minHeight="10.0" prefHeight="28.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="69.0" minHeight="10.0" prefHeight="63.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label alignment="CENTER" prefHeight="40.0" prefWidth="122.0" style="-fx-background-color: lightgrey;" text="Name" />
                        <Label fx:id="lbName" prefHeight="21.0" prefWidth="454.0" style="-fx-background-color: lightgrey;" GridPane.columnIndex="1">
                           <padding>
                              <Insets left="5.0" />
                           </padding>
                           <GridPane.margin>
                              <Insets />
                           </GridPane.margin>
                        </Label>
                        <Label alignment="CENTER" prefHeight="39.0" prefWidth="118.0" text="Type" GridPane.rowIndex="1" />
                        <Label fx:id="lbType" prefHeight="26.0" prefWidth="440.0" style="-fx-background-color: white;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label alignment="CENTER" prefHeight="40.0" prefWidth="122.0" style="-fx-background-color: lightgrey;" text="Access" GridPane.rowIndex="2" />
                        <Label fx:id="lbAccess" prefHeight="40.0" prefWidth="446.0" style="-fx-background-color: lightgrey;" GridPane.columnIndex="1" GridPane.rowIndex="2">
                           <padding>
                              <Insets left="5.0" />
                           </padding>
                        </Label>
                        <Label alignment="CENTER" prefHeight="39.0" prefWidth="118.0" text="Status" GridPane.rowIndex="3" />
                        <Label fx:id="lbStatus" prefHeight="28.0" prefWidth="440.0" style="-fx-background-color: white;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label alignment="CENTER" prefHeight="64.0" prefWidth="120.0" style="-fx-background-color: lightgrey;" text="Description" GridPane.rowIndex="4" />
                        <TextArea fx:id="taDescription" editable="false" prefHeight="63.0" prefWidth="450.0" style="-fx-background-color: lightgrey;" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                     </children>
                  </GridPane>
               </content>
            </ScrollPane>
            </children>
        </AnchorPane>
    </children>
</VBox>
